{
  "manifest_version": 3,
  "name": "Gerenciador de Senhas Pessoal",
  "version": "1.0.0",
  "description": "Extensão de navegador para gestão pessoal de senhas, segura e fácil de usar.",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "Abrir Gerenciador de Senhas"
  },
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "icons": {
    "128": "icons/logo.png",
    "256": "icons/logo.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/logo.png",
        "assets/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/script.js"],
      "run_at": "document_end"
    }
  ]
}
